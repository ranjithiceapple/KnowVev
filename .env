# ============================================================================
# KNOWVEC RAG PIPELINE - ENVIRONMENT CONFIGURATION
# ============================================================================

# ----------------------------------------------------------------------------
# LOGGING CONFIGURATION
# ----------------------------------------------------------------------------
# Set to DEBUG for detailed extraction logs (INFO for production)
LOG_LEVEL=DEBUG

# Log format: 'standard' for human-readable, 'json' for structured logs
LOG_FORMAT=standard


# Enable file logging (logs saved to LOG_DIR)
ENABLE_FILE_LOGGING=true

# Directory for log files
LOG_DIR=logs

# ----------------------------------------------------------------------------
# QDRANT CONFIGURATION
# ----------------------------------------------------------------------------
# Qdrant server URL (connecting to existing enterprise-rag-qdrant container)
QDRANT_URL=http://host.docker.internal:6333

# Qdrant API key (optional, leave empty for local development)
QDRANT_API_KEY=

# Default collection name (using different collection to avoid conflicts)
QDRANT_COLLECTION=knowvec_docs

QDRANT_TIMEOUT=5

QDRANT_RETRY_COUNT=3


# ----------------------------------------------------------------------------
# EMBEDDING MODEL CONFIGURATION
# ----------------------------------------------------------------------------
# Model name for sentence embeddings
EMBEDDING_MODEL=BAAI/bge-base-en-v1.5

# Embedding dimension (768 for bge-base-en-v1.5)
EMBEDDING_DIMENSION=768

# ----------------------------------------------------------------------------
# PROCESSING CONFIGURATION
# ----------------------------------------------------------------------------
# Maximum chunk size in characters
MAX_CHUNK_SIZE=1500

# Target chunk size for optimal retrieval
TARGET_CHUNK_SIZE=1200

# Enable chunk overlap for better context
ENABLE_OVERLAP=true

# Overlap size in characters
OVERLAP_SIZE=250

# Respect page boundaries when chunking
RESPECT_PAGE_BOUNDARIES=false

# Keep tables intact (don't split)
KEEP_TABLES_INTACT=true

# Remove Table of Contents pages
REMOVE_TOC_PAGES=true

# Protect headings during normalization
PROTECT_HEADINGS=true

# Protect tables during normalization
PROTECT_TABLES=true

# Protect code blocks during normalization
PROTECT_CODE_BLOCKS=true

# Detect multi-column layouts
DETECT_MULTI_COLUMN=true

# Deduplicate chunks
DEDUPLICATE_CHUNKS=true

# Aggressive text cleaning
AGGRESSIVE_TEXT_CLEANING=false

# Pipeline version
VERSION=1.0

# ----------------------------------------------------------------------------
# API CONFIGURATION
# ----------------------------------------------------------------------------
# FastAPI host
API_HOST=0.0.0.0

# FastAPI port
API_PORT=8007

# Enable API debug mode (auto-reload)
API_DEBUG=false

# Maximum file upload size (in MB)
MAX_UPLOAD_SIZE_MB=50

# ----------------------------------------------------------------------------
# PERFORMANCE CONFIGURATION
# ----------------------------------------------------------------------------
# Number of workers for batch processing
NUM_WORKERS=4

# Batch size for embedding generation
EMBEDDING_BATCH_SIZE=32

# Cache size for processed documents
CACHE_SIZE=100

# ----------------------------------------------------------------------------
# DEBUG & DEVELOPMENT
# ----------------------------------------------------------------------------
# Show progress bars during processing
SHOW_PROGRESS=true

# Enable detailed timing logs
ENABLE_TIMING_LOGS=true

# Enable memory profiling
ENABLE_MEMORY_PROFILING=false
